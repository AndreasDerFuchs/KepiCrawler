<Window x:Name="MyWindow" x:Class="KepiCrawler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="788" Width="720" Icon="Resources/KepiCrawler.ico">
    <Grid x:Name="MyMainWin" Margin="0" RenderTransformOrigin="0.518,0.445">
        <!-- old Margin="3,-132,3,36" -->
        <WebBrowser x:Name="webBrowser" Margin="3,-1,3,36" OpacityMask="Black" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="3">
            <WebBrowser.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.351"/>
                    <RotateTransform/>
                    <TranslateTransform X="-1.491"/>
                </TransformGroup>
            </WebBrowser.RenderTransform>
        </WebBrowser>
        <TextBlock x:Name="MyUpdateText" HorizontalAlignment="Left" Margin="10,568,0,8" TextWrapping="Wrap" Text="Last Update time" VerticalAlignment="Bottom" Height="20" Width="190"/>
        <Button x:Name="MyButtonUpdate" Content="Update" HorizontalAlignment="Right" Margin="306,568,41,5" VerticalAlignment="Bottom" Width="74" Click="Button_Click" Height="30" Grid.Column="1" RenderTransformOrigin="-1.784,0.5" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
